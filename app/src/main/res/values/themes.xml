<resources>
    <!-- Base application theme. -->
    <style name="Theme.PassManager" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="Theme.PassManager.NoActionBar" parent="Theme.PassManager">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PassManager.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PassManager.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar">true</item>

        <item name="windowSplashScreenBackground">@color/splash_background</item>

        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>


        <item name="postSplashScreenTheme">@style/Theme.PassManager.NoActionBar</item>
    </style>
</resources>